{% extends 'base.html.twig' %}

{% block title %}Salut BlogController!{% endblock %}

{% block body %}
<br>
<section class="articles">
{% for article in articles %}
  <article>
    <h2>{{ article.title }}</h2>
    <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} Ã  
    {{ article.createdAt | date('H:i') }} dans la partie Politique.</div>
    <div class="content">
       <img src="{{ article.image }}" alt="">
       {{ article.content | raw }}
       <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">
       Lire la suite</a>
       <a href="{{ path('blog_edit', {'id': article.id})  }}" class="btn btn-secondary">
       Modifier un article</a>
    </div>
  </article>
  <br>
{% endfor %}
</section>
{% endblock %}
